@model OrderVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="@Model.OrderHeader.Id" />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input asp-for="@Model.OrderHeader.Name" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.Name" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.OrderHeader.Name" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input asp-for="@Model.OrderHeader.Phonenumber" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.Phonenumber" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.OrderHeader.Phonenumber" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input asp-for="@Model.OrderHeader.StreetAdress" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.StreetAdress" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.OrderHeader.StreetAdress" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input asp-for="@Model.OrderHeader.City" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.City" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.OrderHeader.City" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input asp-for="@Model.OrderHeader.State" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.State" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.OrderHeader.State" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input asp-for="@Model.OrderHeader.Postalcode" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.Postalcode" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.OrderHeader.Postalcode" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                   
                                        <input asp-for="@Model.OrderHeader.AppUser.Email" readonly type="text" class="form-control" />

                                   
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                   
                                        <input asp-for="@Model.OrderHeader.Orderdate" readonly type="text" class="form-control" />

                                    
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input id="Carrier" asp-for="@Model.OrderHeader.Carrier" type="text" class="form-control" />
                                     }
                                    else
                                    {
                                        <input id="Carrier" asp-for="@Model.OrderHeader.Carrier" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input id="Trackingnumber" asp-for="@Model.OrderHeader.Trackingnumber" type="text" class="form-control" />
                                     }
                                    else
                                    {
                                        <input Trackingnumber asp-for="@Model.OrderHeader.Trackingnumber" readonly type="text" class="form-control" />

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input asp-for="@Model.OrderHeader.Shippingdate" type="text" readonly class="form-control" />
                                </div>
                            </div>
                              @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                            <div class="row my-1">
                                <div class="col-3">Session ID</div>
                                <div class="col-9">
                                  
                                        <input asp-for="@Model.OrderHeader.SessionId" readonly type="text" class="form-control" />

                                    
                                   
                                </div>
                            </div>
                            }
                            @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                            {
                            <div class="row my-1">
                                <div class="col-3">Payment Intent ID</div>
                                <div class="col-9">
                                    
                                        <input asp-for="@Model.OrderHeader.Paymentintendid" readonly type="text" class="form-control" />

                                    
                                </div>
                            </div>
                                    }

                            <div class="row my-1">

                                @if(Model.OrderHeader.SessionId==null){
                                <div class="col-3">Payment Due Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                                        <input asp-for="@Model.OrderHeader.Paymentduedate" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.Paymentduedate" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.OrderHeader.Paymentduedate" readonly type="text" class="form-control" />

                                    }
                                   </div>
                                }
                                else{
                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                   
                                            <input asp-for="@Model.OrderHeader.Paymentdate" readonly type="text" class="form-control" />
                                      
                                  
                                
                                </div>
                                }
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                               
                                <div class="col-9">
                                    <input asp-for="@Model.OrderHeader.Paymentstatus" type="text" readonly class="form-control" />
                                </div>
                                   
                            </div>
                             @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                                    {
                            <input type="submit" asp-action="UpdateOrderDetail" class="btn btn-warning form-control my-1" value="Update Order Details" />
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - XX @Model.OrderHeader.Orderstatus XX</label>

                            <ul class="list-group mb-3">
                                 @foreach(var order in Model.orderDetail){
                                <li class="list-group-item d-flex justify-content-between p-2">
                                    <div class="row container">
                                       
                                        <div class="col-8">

                                            <h6 class="my-0 text-primary">@order.Product.Title</h6>
                                            <small class="text-muted">Price : @order.price.ToString("c")</small><br />
                                            <small class="text-muted">Quantity : @order.count</small>
                                        </div>
                                       
                                        <div class="col-4 text-end">
                                                <p class="text-success">@order.count * @order.price.ToString("c")</p>
                                        </div>
                                    </div>
                                </li>
                                }
                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderHeader.Total.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>


                            @if (Model.OrderHeader.Paymentstatus == SD.Payment_status_Delayed_payment 
                            &&Model.OrderHeader.Orderstatus==SD.status_Shipped
                            &&  User.IsInRole(SD.Role_user_Com))
                                {
                                    <input type="submit" asp-action="Pay" class="btn btn-success form-control my-1" value="Pay Now" />
                                }
                            @if (User.IsInRole(SD.Role_user_Admin) || User.IsInRole(SD.Role_user_Employee))
                            {
                                if (Model.OrderHeader.Orderstatus == SD.status_Approved)
                                {
                                    <input type="submit" asp-action="StartProccessing" class="btn btn-primary form-control my-1" value="Start Processing" />
                                }

                                if (Model.OrderHeader.Orderstatus == SD.status_InProccess)
                                {
                                    <input type="submit" onclick="return checkforcarrier()" asp-action="ShipOrder" class="btn btn-primary form-control my-1" value="Ship Order" />
                                }

                                if (Model.OrderHeader.Orderstatus != SD.status_Refund &&
                                Model.OrderHeader.Orderstatus != SD.status_Cancelled &&
                                Model.OrderHeader.Orderstatus != SD.status_Shipped)
                                {
                                    <input type="submit" class="btn btn-danger form-control my-1" value="Cancel Order" asp-action="CancelOrder" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
        <script>
            function checkforcarrier() {
            if (document.getElementById("Trackingnumber").value == "") {
                Swal.fire({
                    title: "Oops...",
                    text: "Please enter tracking number!",
                });
                return false;
            }
            if (document.getElementById("Carrier").value == "") {
                Swal.fire({
                    title: "Oops...",
                    text: "Please enter carrier!",
                });
                return false;
            }

            }

      
    </script>

}