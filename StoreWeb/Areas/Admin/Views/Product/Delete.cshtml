@model Store.Models.Product


<div class="card shadow border-0 mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="rows">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body">
        <form method="post">
           
            <div class="border p-3 ">

                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" readonly class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>

                 
                </div>

                <div class="form-floating py-2 col-12">

                    <input asp-for="ISBN" readonly class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>

                  
                </div>

                <div class="form-floating py-2 col-12">

                    <input asp-for="Author" readonly class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>

                  
                </div>

               

                <div class="form-floating py-2 col-12">

                    <input asp-for="Description" readonly class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>

                  
                </div>

                <div class="form-floating py-2 col-12">

                    <input asp-for="ListPrice" readonly class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>

                    
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Price" readonly class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>

                   
                </div>

                <div class="form-floating py-2 col-12">

                    <input asp-for="Price50" readonly class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>

                   
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-4">
                        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary form-control">Back to List</a>
                    </div>
                </div>



            </div>
        </form>
    </div>
</div>



@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}